server {
    listen 80;
    server_name dj.insidenet.net;

    # Redirect all HTTP requests to HTTPS
    return 301 https://$host$request_uri;
}

server {
    listen 443 ssl; # managed by Certbot
    server_name dj.insidenet.net;

    location / {
        proxy_pass http://unix:/home/ubuntu/project_name/gunicorn.sock;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    location ~ /.well-known/acme-challenge {
        allow all;
    }

    ssl_certificate /etc/letsencrypt/live/dj.insidenet.net/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/dj.insidenet.net/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot
}
